{
  "name": "authenticai-software-coach",
  "version": "1.0.0",
  "description": "AI-powered prevention coach for asthma and allergies",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm start",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && pytest tests/ -v",
    "test:frontend": "cd frontend && npm test -- --coverage --watchAll=false",
    "test:integration": "cd backend && pytest tests/ -m integration",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics",
    "lint:frontend": "cd frontend && npm run lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && pip install -r requirements.txt",
    "setup:frontend": "cd frontend && npm install",
    "start": "docker-compose up",
    "deploy": "npm run build && npm run deploy:netlify",
    "deploy:netlify": "cd frontend && netlify deploy --prod --dir=build"
  },
  "keywords": [
    "ai",
    "health",
    "asthma",
    "allergies",
    "prevention",
    "voice-assistant",
    "smart-home"
  ],
  "author": "Authenticai Team",
  "license": "Commercial",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/authenticai-software-coach.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/authenticai-software-coach/issues"
  },
  "homepage": "https://github.com/your-org/authenticai-software-coach#readme",
  "dependencies": {
    "@stripe/react-stripe-js": "^5.0.0",
    "@stripe/stripe-js": "^8.0.0"
  }
}
